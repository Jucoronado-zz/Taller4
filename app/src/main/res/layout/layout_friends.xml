<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FriendsActivity" android:orientation="vertical">

    <TextView
            android:text="Friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:gravity="center" android:layout_gravity="center"/>
    <TextView
            android:text="Dar Clik para ver mayor informaciÃ³n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/instructions" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"

            android:gravity="center" android:layout_gravity="center"/>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/thumbnail_height">
        <ImageButton android:src="@drawable/phoebe"
                     android:tag="phoebe"
                     android:layout_weight="1"
                     android:scaleType="centerCrop"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:padding="0dp"
                     android:onClick="onFriendsClick"
        />
        <ImageButton android:src="@drawable/joey"
                     android:tag="joey"
                     android:scaleType="centerCrop"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:padding="0dp"
                     android:onClick="onFriendsClick"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/thumbnail_height">
        <ImageButton android:src="@drawable/ross"
                     android:tag="ross"
                     android:layout_weight="1"
                     android:scaleType="centerCrop"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:padding="0dp"
                     android:onClick="onFriendsClick"
        />
        <ImageButton android:src="@drawable/rachel"
                     android:tag="rachel"
                     android:layout_weight="1"
                     android:scaleType="centerCrop"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:padding="0dp"
                     android:onClick="onFriendsClick"
        />
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/thumbnail_height">
        <ImageButton android:src="@drawable/chandler"
                     android:tag="chandler"
                     android:layout_weight="1"
                     android:scaleType="centerCrop"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:padding="0dp"
                     android:onClick="onFriendsClick"
        />
        <ImageButton android:src="@drawable/monica"
                     android:tag="monica"
                     android:layout_weight="1"
                     android:scaleType="centerCrop"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:padding="0dp"
                     android:onClick="onFriendsClick"
        />
    </LinearLayout>
    <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnplay"
            android:background="@android:color/transparent"
    />


</LinearLayout>